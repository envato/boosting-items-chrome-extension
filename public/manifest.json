{
  "manifest_version": 2,
  "name": "Envato Market Item Boosting",
  "version": "0.1.5",
  "description": "Envato Market Item Boosting",
  "icons": {
    "16": "/img/16.png",
    "48": "/img/48.png",
    "128": "/img/128.png"
  },
  "browser_action": {
    "default_icon": "/img/48.png"
  },
  "permissions": [
    "https://themeforest.net/admin/awesome_proofing/*",
    "https://codecanyon.net/admin/awesome_proofing/*",
    "https://videohive.net/admin/awesome_proofing/*",
    "https://graphicriver.net/admin/awesome_proofing/*",
    "https://3docean.net/admin/awesome_proofing/*",
    "storage",
    "tabs",
    "identity",
    "activeTab",
    "background",
    "https://docs.google.com/spreadsheets/",
    "https://googleapis.com/auth/spreadsheets",
    "https://www.googleapis.com/*",
    "https://www.apis.google.com/*",
    "*://*.google.com/*"
  ],
  "web_accessible_resources": [
    "/oauth2/*",
    "/static/media/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*admin/awesome_proofing*"
      ],
      "css": ["/static/css/main.css"],
      "js": ["/static/js/main.js"]
    }
  ],
  "background": {
    "page": "background.html",
    "persistent": true 
  },
  "options_page": "options.html",
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
  "oauth2": {
  	"client_id": "1065567962474-8cp6diuu5u7bvmrs6tofpbggl8c557li.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.file",
      "https://www.googleapis.com/auth/drive.readonly",
      "https://www.googleapis.com/auth/drive.metadata.readonly",
      "https://www.googleapis.com/auth/drive.metadata",
      "https://www.googleapis.com/auth/drive.appdata",
      "https://www.googleapis.com/auth/drive",
      "https://www.googleapis.com/auth/spreadsheets",
      "https://www.googleapis.com/auth/spreadsheets.readonly"
    ]
},
  "key": ""
}
